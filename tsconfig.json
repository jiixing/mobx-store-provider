{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["es2015", "dom", "esnext"],
    "jsx": "react"
  },
  "include": ["src"],
  "exclude": ["node_modules", "src/tests"]
}
